{
  "compilerOptions": {
    "rootDir": "src",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "jsx": "react-jsx",
    "incremental": true,
    "declaration": true,
    "outDir": "dist"
  },
  "files": ["types.d.ts"],
  "include": ["src"]
}
